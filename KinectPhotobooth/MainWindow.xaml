        -->
        <Canvas Grid.Row="1" Height="240" Width="320" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Ellipse Canvas.Left="0" Canvas.Top="0" Fill="Blue" Height="15" Name="righthand" Width="15" />
        </Canvas>
    </Grid>

</Window>
