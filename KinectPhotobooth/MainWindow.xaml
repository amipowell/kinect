        Title="MainWindow" Height="300" Width="320">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="1"  Height="240" HorizontalAlignment="Left" Name="groupBox1" VerticalAlignment="Top" Width="320">
            <Image x:Name="cameraControl" />
        </GroupBox>
